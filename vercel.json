{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/api/interpret", "dest": "/api/interpret.js" },
    { "src": "/images/(.*)", "dest": "/public/images/$1" }
  ]
}
